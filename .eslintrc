{
    "plugins": ["node"],
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "env": {
      "node": true,
    },
    "rules": {
        "node/exports-style": ["warn", "module.exports"], // disallows using `export = xxx`
        "no-unused-vars": "warn",
        "no-process-exit": 0,
        "no-console": ["error", { allow: ["warn", "error"] }],
    }
}